<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multi-Step Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="style2.css">
</head>
<body>
<div class="form-container">
    <!-- Step 1 -->
    <div class="form-step" id="step1">
        <h2>Step 1: Basic Information</h2>
        <form id="formStep1">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="John Doe" required>
            </div>

            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" required>
                    <option value="" disabled selected>Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <button type="button" id="nextStep1" class="arrow-button">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- Step 2 -->
    <div class="form-step" id="step2" style="display: none;">
        <h2>Step 2: Academic Achievements</h2>
        <form id="formStep2">
            <div class="form-group">
                <label for="achievements">Achievements:</label>
                <textarea id="achievements" name="achievements" placeholder="List your achievements" rows="4" required></textarea>
            </div>

            <div class="form-group">
                <label for="cgpa">CGPA Per Semester:</label>
                <input type="text" id="cgpa" name="cgpa" placeholder="3.5, 3.8, etc." required>
            </div>

            <div class="buttons-container">
                <button type="button" id="backStep2" class="arrow-button">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button type="button" id="nextStep2" class="arrow-button">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </form>
    </div>

    <!-- Step 3 -->
    <div class="form-step" id="step3" style="display: none;">
        <h2>Step 3: Contact and Academic Information</h2>
        <form id="formStep3">
            <div class="form-group">
                <label for="email">Email ID:</label>
                <input type="email" id="email" name="email" placeholder="example@example.com" required>
            </div>

            <div class="form-group">
                <label for="contact">Contact Number:</label>
                <input type="tel" id="contact" name="contact" placeholder="1234567890" pattern="[0-9]{10}" required>
            </div>

            <div class="form-group">
                <label for="currentYear">Current Year of Study:</label>
                <input type="number" id="currentYear" name="currentYear" placeholder="e.g., 2024" min="1900" max="2099" step="1" required>
            </div>

            <div class="buttons-container">
                <button type="button" id="backStep3" class="arrow-button">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button type="submit" id="submitForm" class="arrow-button">
                    <i class="fas fa-check"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<script src="script2.js"></script>
</body>
</html>

